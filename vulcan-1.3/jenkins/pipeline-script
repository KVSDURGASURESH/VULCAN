pipeline {   
    environment { 
        registry = "dkagitha/whatnxt-app" 
        registryCredential = 'dockerhub_cred' 
        dockerImage = '' 
    }
    agent any 
    stages { 
        stage('Cloning Git') { 
            steps { 

                git 'https://github.com/KVSDURGASURESH/VULCAN' 
            }
        } 
        stage('Building docker image') { 
            steps { 
                sh "pwd"
                dir('vulcan-1.3/whatnxt'){
                    sh "pwd"
                    script { 
                        dockerImage = docker.build registry + ":1.3." + "$BUILD_NUMBER-" + "SNAPSHOT" 
                    }
                }
                
            } 
        }
        stage('Deploy docker image to Registry') { 
            steps {
                withDockerRegistry([ credentialsId: "dockerhub_cred", url: "" ]) {
                  script { 
                        sh "docker push dkagitha/whatnxt-app:1.3.$BUILD_NUMBER-SNAPSHOT"
                    }

                }                  
            }
        } 
    }
}

